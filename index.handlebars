 {{#if user}}
     <div>
         <p>User: {{user.firstName}} {{user.lastName}}</p>
         <p id = 'user-id'>{{user.userId}}</p>
         <a href="/projects/user/{{user.userId}}" class="link-styles">My projects</a><br/>
         <a href="/projects/new" class="link-styles">Start a campaign</a><br/>
         <a href="/users/logout" class="link-styles">Log out</a>
     </div>
 {{else}}
     <div id = 'login-container'>
         <ul>
             <li><a style="font-size: x-large;" href="/users/signin" class="link-styles">Sign In</a><br /></li></ul>
         <ul>
             <li><a style="font-size: x-large;" href="/users/register" class="link-styles">Register</a><br /></li></ul>
     </div>
 {{/if}}
<section>
    <h1>Recent Projects</h1>
    {{#each projects}}
        <article class="projects">
            <h2><a href="/projects/{{_id}}">{{title}}</a></h2>
            <p>Author: {{creator}}</p>
            <p>Date: {{date}}</p>
        </article>
    {{/each}}
</section>
